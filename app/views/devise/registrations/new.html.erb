<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="form-wrapper">

          <h3>Crie sua conta na WeBelong ❤️</h3>
          <div class="form-responsive">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email, required: true, autofocus: true %>
              <%= f.input :password, label: 'Senha', required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
              <%= f.input :password_confirmation, label: 'Confirmar senha', required: true %>
            </div>
          </div>
            <div class="form-actions">
              <%= f.button :submit, "Criar conta", class: "button button-w bg-1 button--border-thin button--round-s" %>
            </div>
            <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
