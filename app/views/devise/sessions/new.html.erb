<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="form-wrapper">
        <h3>Conecte-se ao WeBelong ❤️</h3>
        <div class="form-responsive">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, required: false, autofocus: true %>
              <%= f.input :password, label: 'Senha', required: false %>
              <%= f.input :remember_me, label: 'Lembre-se de mim', as: :boolean if devise_mapping.rememberable? %>
            </div>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Conectar", class: "button button-w bg-1 button--border-thin button--round-s" %>
          </div>
          <% end %>
        <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
