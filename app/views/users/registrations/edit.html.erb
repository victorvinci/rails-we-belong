<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="form-wrapper">
        <h2 class="title-pp">Editar <%= resource_name.to_s.humanize %></h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>
            <%= render "employee_profiles/form" %>
            <%= f.input :password, label: 'Senha', autocomplete: "off", hint: "deixe em branco caso nÃ£o deseje alterar", required: false %>
            <%= f.input :password_confirmation, label: 'Confirmar senha', required: false %>
            <%= f.input :current_password, label: 'Senha atual', hint: "precisamos da sua senha atual para confirmarmos as alteraÃ§Ãµes", required: true %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Atualizar", class: "button button-w bg-1 button--border-thin button--round-s" %>
          </div>
        <% end %>
        </div>
      </div>
        <div class="row">
          <div class="col-xs-12 col-md-6 col-md-offset-3">
            <h3>Cancelar conta</h3>

            <p>ðŸ˜” <%= link_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "VocÃª tem certeza?" }, method: :delete %></p>

              <%= link_to "Voltar", :back %>
            </div>
        </div>
      </div>
    </div>
</div>

