<h1>Searches</h1>
<div>
    <%= form_tag searches_index_path, method: :get do%>
  <%= text_field_tag :query,
    params[:query], id: "searchbar", placeholder: "Type a key word"%>
  <%= submit_tag "Search" %>
  <% end %>

  <h3> Results for <strong><%= params[:query] %></strong></h3>

      <% if @results.empty? && @companies.empty? %>
      <p>Your search - <%= params[:query] %> - did not find any corresponding item. Please try another key word.</p>
  <% elsif @results.empty? %>
      <% @companies.each do |result| %>
      <div>
        <p><%= result.name %></p>
      </div>
      <% end %>
  <% else %>
      <% @results.each do |result| %>
        <div>
          <p><%= result.company.name %></p>
        </div>
        <div>
          <p><%= result.content %></p>
        </div>
      <% end %>
  <% end %>


