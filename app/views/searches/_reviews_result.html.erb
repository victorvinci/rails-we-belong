<section class="container-results">

  <div class="header-results">
    <h1> Resultados para <strong><%= params[:query] %></strong> em Avaliações:</h1>
    <p>Total Results: X</p>
  </div>

  <ul>
    <% @results.each do |result| %>
      <li class="container-cards">

        <i class="avatar-result-user fa fa-user"></i>

        <h2 class="message-title">Titulo Review</h2>

        <div class="message-body">

        <p class="user-review"><%= result.pg_search_highlight.html_safe %></p>

        <p class="created-at"> <%= link_to "View More", company_path(result.company_id) %></p>
        </div>

        <p class="rating-user">
          <% (result.company.final_rating / 20).times do %>
            <i class="fas fa-star"></i>
          <% end %>
          <% if (result.company.final_rating % 20) > 0 %>
            <i class="fas fa-star-half"></i>
          <% end %>
        </p>

      </li>
    <% end %>
  </ul>

<%= paginate @results %>
</section>
