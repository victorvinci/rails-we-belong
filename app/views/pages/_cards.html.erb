
<div class="header-results" style="text-align: center; margin: 0;"><h2>Veja aqui algumas empresas avaliadas</h2></div>

<ul style="padding: 0;">
    <% @companies.each do |result| %>
      <li class="container-cards">

          <h2 class="link-result"><%= link_to result.name, company_path(result) %></h2>

          <i class="avatar-company far fa-building"></i>

          <p class="total-reviews"><%= result.reviews.count %> avaliações</p>

        <p class="rating-company">
          <% (result.final_rating / 20).times do %>
            <i class="fas fa-star"></i>
          <% end %>
          <% if (result.final_rating % 20) > 0 %>
            <i class="fas fa-star-half"></i>
          <% end %>
        </p>

      </li>
    <% end %>

  </ul>
