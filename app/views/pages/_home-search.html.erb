<div id="custom-search-home">
  <div id="custom-search-input">
    <div class="input-group col-md-12 col-sm-12 col-lg-12 col-xs-12">
      <%= form_tag searches_index_path, id: "form-control-text", method: :get do %>
        <span class="input-group-btn">
            <button class="btn" type="submit">
              <i class="glyphicon glyphicon-search"></i>
            </button>
          </span>
        <%= text_field_tag :query, params[:query], placeholder: "Procure aqui por empresa ou tema de seu interesse" , style: "font-size: 16px;" %>
          <% end %>
    </div>
  </div>
</div>
